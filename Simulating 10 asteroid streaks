#    y_max = min(center_y + 20, data.shape[0])
#    ax = axs_no_scale[i // 5, i % 5]
#    ax.imshow(data_with_streaks[y_min:y_max, x_min:x_max], cmap='gray', origin='lower')
#    ax.set_xlabel(f'X: {x_min} to {x_max}')
#    ax.set_ylabel(f'Y: {y_min} to {y_max}')
#    ax.set_title(f'Streak {i+1}\nX: {center_x}, Y: {center_y}, Len: {length}, Wid: {width}\nAng: {angle:.2f}, Mag: {magnitude:.2f}, Vel: {velocity:.2f}')
#    ax.axis('on')
#output_zoom_path_no_scale = os.path.join(output_dir, '6. skymapper_image_zoomed_streaks_no_scale.png')
#plt.savefig(output_zoom_path_no_scale)

# 7. Create an image with grid lines for sub-images (with scaling)
fig5, ax5 = plt.subplots(figsize=(10, 10))
ax5.imshow(data_with_streaks, cmap='gray', origin='lower', norm=norm)
ax5.set_title('Skymapper Image with Grid (Scaled)')
grid_rows, grid_cols = 5, 5  #grid size
subimage_height = data_with_streaks.shape[0] // grid_rows
subimage_width = data_with_streaks.shape[1] // grid_cols
for i in range(grid_rows + 1): #draw horizontal line
    ax5.axhline(i * subimage_height, color='black', linestyle='--', linewidth=1)
for j in range(grid_cols + 1): #draw vertical line
    ax5.axvline(j * subimage_width, color='black', linestyle='--', linewidth=1)
for i in range(grid_rows): #iterate over row
    for j in range(grid_cols): #iterate over colum
        rect = Rectangle((j * subimage_width, i * subimage_height), subimage_width, subimage_height, 
                         linewidth=1, edgecolor='black', facecolor='none') #create a rectangle
        ax5.add_patch(rect) #add all the rectangles to the image
        ax5.text(j * subimage_width + subimage_width / 2, i * subimage_height + subimage_height / 2,  
                 f'{(grid_rows - 1 - i) * grid_cols + j + 1}', color='black', fontsize=12, ha='center', va='center') #label each sub-image
output_grid_path = os.path.join(output_dir, '7. skymapper_image_with_grid.png')
plt.savefig(output_grid_path)

# 8. Dividing the sub-plots
fig6, axs = plt.subplots(grid_rows, grid_cols, figsize=(10, 10)) #creating an image with sub-plots
fig6.subplots_adjust(hspace=0.2, wspace=0.1) #spacing between sub-plots
for i in range(grid_rows): #iterate over rows
    for j in range(grid_cols): #iterate over columns
        x_min = j * subimage_width #min coordinates for sub-image
        x_max = (j + 1) * subimage_width #max coordinates for sub-image
        y_min = (grid_rows - 1 - i) * subimage_height #min coordinates for sub-image
        y_max = (grid_rows - i) * subimage_height #max coordinates for sub-image
        ax = axs[i, j] #select that sub-plot
        ax.imshow(data_with_streaks[y_min:y_max, x_min:x_max], cmap='gray', origin='lower', norm=norm)
        for k, (center_x, center_y, length, width, angle, magnitude, velocity) in enumerate(streaks): #iterate over the streaks
            if x_min <= center_x < x_max and y_min <= center_y < y_max: #check of streak is in image
                circ = Circle((center_x - x_min, center_y - y_min), radius=10, edgecolor='red', facecolor='none', linewidth=2) #create a circle
                ax.add_patch(circ) #add circle 
                ax.text(center_x - x_min + 40, center_y - y_min + 40, str(k + 1), color='black', fontsize=12, ha='center', va='center')
        ax.set_title(f'Sub-image {(grid_rows - 1 - i) * grid_cols + j + 1}')
        ax.axis('off') #hide the axis
output_subimages_path = os.path.join(output_dir, '8. skymapper_image_subimages.png')
plt.savefig(output_subimages_path)

# 9. Save each sub-image individually without asteroid identification
for i in range(grid_rows): #iterate over rows
    for j in range(grid_cols): #iterate over columns
        x_min = j * subimage_width #min coordinate of sub-image
        x_max = (j + 1) * subimage_width #max coordinate of sub-image
        y_min = (grid_rows - 1 - i) * subimage_height #min coordinate of sub-image
        y_max = (grid_rows - i) * subimage_height #max coordinate of sub-image
        fig_sub, ax_sub = plt.subplots(figsize=(3, 3)) #create a new image
        ax_sub.imshow(data_with_streaks[y_min:y_max, x_min:x_max], cmap='gray', origin='lower', norm=norm)
        ax_sub.axis('off') #hide the axis
        output_subimage_path = os.path.join(output_dir, f'subimage_{i * grid_cols + j + 1}.png')
        plt.savefig(output_subimage_path)
        plt.close(fig_sub)
plt.show()

