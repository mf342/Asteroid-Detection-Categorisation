#Importing necessary libraries 
import os #interacts with the operating system for directory creation
import matplotlib.pyplot as plt #for visualization
from matplotlib.patches import Circle, Rectangle #To create patches for highlightening areas
from astropy.io import fits #for reading and writing FITS (standard data format in astronomy) files
from astropy.visualization import ZScaleInterval, AsinhStretch, ImageNormalize #Image normalization and stretching
import numpy as np #for mathematical operation 
import pandas as pd  #for data structures and data analysis
import random #generates random numbers

#Creating a folder to store all the output images
output_dir = 'asteroids'
os.makedirs(output_dir, exist_ok=True) #creates the directory if not present, but if, then no error should be raised

# Open the FITS file
file_path = os.path.join(output_dir, 'Skymapper_0882916638_2023-05-11T18_52_22_30_red.fits.fz')
with fits.open(file_path) as hdul: #open the file and assign to hdul
    data = hdul[1].data if len(hdul) > 1 else hdul[0].data #retriving data from the second extensions because it is not present in the first

# Converting magnitude of the asteroid streaks to brightness levels #Reference EUCLID paper
def magnitude_to_brightness(magnitude):
    if 20.3 <= magnitude <= 22.2:
        return 0.9 # High brightness
    elif 22.6 <= magnitude <= 23.9:
        return 0.3 # Medium brightness
    elif magnitude >= 25.0:
        return 0.0 # Practically invisible
    return 0.1 # for all other magnitudes

# Function to add streaks to the image and return their locations - new streaks created for each simulation 
# Streaks are created at random location with random orientation from 0◦ to 360◦ (clockwise from east)
# Wiht random magnitudes ranging from 20-26 and apparent velocity around 1 to 80 −1 arcsech^-1 
# The magnitudes will make the asteroids streaks very bright, slight bright and almost/completely invisible 
# Brightness variation is not accounted in the simulated 

def add_streaks(data, streak_params):
    streaks = [] #initializing an empty list to store the streak parameters
    for params in streak_params: #iterating on each set of streaks
        center_x, center_y, length, width, angle, magnitude, velocity = params #The parameters defined for each streak
        streaks.append((center_x, center_y, length, width, angle, magnitude, velocity)) #Adding the parameters to the streak list
        brightness = magnitude_to_brightness(magnitude) * np.max(data) #convert magnitude to brightness and scale to maximum pixel value
        for w in range(-width//2, width//2 + 1): #iterate on width of streak
            for l in range(-length//2, length//2 + 1): #iterate on length of streak
                x = int(center_x + l * np.cos(angle) - w * np.sin(angle)) #calculate x-coordinate 
                y = int(center_y + l * np.sin(angle) + w * np.cos(angle)) #calculate y-coordinate 
                if 0 <= x < data.shape[1] and 0 <= y < data.shape[0]: #pixel coordinates must be within the image 
                    data[y, x] = brightness #brightness set for the pixels
    return data, streaks #return the modified image and the data on the streaks

# Generate a single consistent set of asteroid streaks
streak_params = [] #initializing empty list to store streak parameters
for _ in range(10): #Looping 10 times to create 10 streaks 
    length = random.randint(20, 26)  #length of streak 
    width = random.randint(1, 3)  #width of streak 
    angle = random.uniform(0, 2*np.pi) #angle of steak
    center_x = random.randint(0, data.shape[1] - 1) # Select a random location in the FITS image 
    center_y = random.randint(0, data.shape[0] - 1) #Select a random location in the FITS image 
    magnitude = random.uniform(20, 26) #Random magnitude                                                   
    velocity = random.uniform(1, 80) #Random velocity
    streak_params.append((center_x, center_y, length, width, angle, magnitude, velocity)) #Add the generated parameters to the streak_params list

# Add streaks to the data and get their locations, data.copy() is keeping a copy of original image
data_with_streaks, streaks = add_streaks(data.copy(), streak_params) #The add_streak function adds streaks to the image     

#Asinh (Arcsinh): The tuning enhances both faint and bright features simultaneously.
#Zscale: Automatic contrast adjustment, helps reduce background dust.
interval = ZScaleInterval() #Initializing zscaling
vmin, vmax = interval.get_limits(data_with_streaks) #Calculates min and max pixel value
norm = ImageNormalize(vmin=vmin, vmax=vmax, stretch=AsinhStretch()) #Normalizing the image

# 1. Original image without streaks
fig0, ax0 = plt.subplots(figsize=(10, 10)) #Creating a new figure with axis
ax0.imshow(data, cmap='gray', origin='lower') #Image in grayscale and image is positioned for origin at lower left corner
ax0.set_title('Original Skymapper Image')
ax0.set_xlabel('X Coordinate')
ax0.set_ylabel('Y Coordinate')
output_path0 = os.path.join(output_dir, '1. original_skymapper_image.png')
plt.savefig(output_path0)

# 2. Non-scaled image with streaks 
fig1_no_scale, ax1_no_scale = plt.subplots(figsize=(10, 10)) ##Creating a new figure with axis
ax1_no_scale.imshow(data_with_streaks, cmap='gray', origin='lower') #Image with streaks
ax1_no_scale.set_title('Skymapper Image with Asteroid Streaks (No Scaling)')
ax1_no_scale.set_xlabel('X Coordinate')
ax1_no_scale.set_ylabel('Y Coordinate')
output_path1_no_scale = os.path.join(output_dir, '2. skymapper_image_with_streaks_no_scale.png')
plt.savefig(output_path1_no_scale)

# 3. Scaled image with streaks
fig1, ax1 = plt.subplots(figsize=(10, 10)) #Creating a new figure with axis
ax1.imshow(data_with_streaks, cmap='gray', origin='lower', norm=norm) #Image with streaks and scaled
ax1.set_title('Skymapper Image with Asteroid Streaks (Scaled)')
ax1.set_xlabel('X Coordinate')
ax1.set_ylabel('Y Coordinate')
output_path1 = os.path.join(output_dir, '3. skymapper_image_with_streaks.png')
plt.savefig(output_path1)

# 4. Scaled image streaks identified 
fig2, ax2 = plt.subplots(figsize=(10, 10)) #Creating a new figure with axis
ax2.imshow(data_with_streaks, cmap='gray', origin='lower', norm=norm)
for i, (center_x, center_y, length, width, angle, magnitude, velocity) in enumerate(streaks): #iterate on the steaks
    circ = Circle((center_x, center_y), radius=10, edgecolor='red', facecolor='none', linewidth=2) #
    ax2.add_patch(circ) #put a circle around the streak
    ax2.text(center_x + 40, center_y + 40, str(i + 1), color='black', fontsize=12, ha='center', va='center')  # number the streak
ax2.set_title('Skymapper Image with Identified Streaks (Scaled)')
ax2.set_xlabel('X Coordinate')
ax2.set_ylabel('Y Coordinate')
output_path2 = os.path.join(output_dir, '4. skymapper_image_with_identified_streaks.png')
plt.savefig(output_path2)

# 5. zoomed-in asteroid streak and their parameters with scaling
fig3, axs = plt.subplots(10, 10, figsize=(50, 50)) #figure has a 2x5 grid
fig3.subplots_adjust(hspace=0.5, wspace=0.5) #adjust spacing between subplots
for i, (center_x, center_y, length, width, angle, magnitude, velocity) in enumerate(streaks): #iterate over streaks 
    x_min = max(center_x - 20, 0) #calculates for zooming within bounds for max point on axis
    x_max = min(center_x + 20, data.shape[1]) 
    y_min = max(center_y - 20, 0) #calculates for zooming within bounds for max point on axis
    y_max = min(center_y + 20, data.shape[0])
    ax = axs[i // 10, i % 10] #checing subplot
    ax.imshow(data_with_streaks[y_min:y_max, x_min:x_max], cmap='gray', origin='lower', norm=norm)
    ax.set_xlabel(f'X: {x_min} to {x_max}')
    ax.set_ylabel(f'Y: {y_min} to {y_max}')
    ax.set_title(f'Streak {i+1}\nX: {center_x}, Y: {center_y}, Len: {length}, Wid: {width}\nAng: {angle:.2f}, Mag: {magnitude:.2f}, Vel: {velocity:.2f}')
    ax.axis('on')
output_zoom_path = os.path.join(output_dir, '5. skymapper_image_zoomed_streaks.png')
plt.savefig(output_zoom_path)

# 6. zoomed-in asteroid streak and their parameters without scaling
#fig3_no_scale, axs_no_scale = plt.subplots(2, 5, figsize=(20, 8))
#fig3_no_scale.subplots_adjust(hspace=0.4, wspace=0.4)
#for i, (center_x, center_y, length, width, angle, magnitude, velocity) in enumerate(streaks):
